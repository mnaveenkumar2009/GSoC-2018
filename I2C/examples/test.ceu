#include "wclock.ceu"
#include "arduino/arduino.ceu"
#include "gpio.ceu"

output bool PIN_13;
input u8 ABC;
var int count=0;
native
  _TWI_vect,
;
spawn async/isr [_TWI_vect] do
  {TWCR = (1<<TWINT)|(1<<TWEN)| (1<<TWSTO) | (1<<TWIE);}
  emit ABC(1);
end

{
  TWBR = ((F_CPU / 100000L) - 16) / 2;
}
await 2ms;

par/and do
  
  loop do
    {
      TWCR = (1<<TWINT)|(1<<TWSTA)|(1<<TWEN)|(1<<TWIE);
    }
    await ABC;
    await 3ms;
  end

with
    loop do
      emit PIN_13(on);
      await 1s;  
      emit PIN_13(off);
      await 1s;
    end
end